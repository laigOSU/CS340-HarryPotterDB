<h1>Hogwarts Students:</h1>

<form id="addstudent" action="/students" method="post">
    First name: <input type="text" name="fname"><br>
    Last name: <input type="text" name="lname"><br>
    House: <select name="house"> 
        {{#each houses}}
        <option value="{{id}}">{{this.name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
</form>

<table>
    <thead>
        <th>Id</th>
        <th>First Name</th> 
        <th>Last Name</th>
        <th>House</th>
    </thead> 
    <tbody> 
        {{#each students}}
        <tr> 
            <td>{{this.id}}</td> 
            <td>{{this.fname}}</td> 
            <td>{{this.lname}}</td>
            {{#if this.house}}<td>{{this.house}}</td>{{else}}<td>NULL</td>{{/if}}
            
            <td><a href="/students/{{this.id}}">Update/Delete</a></td>
        </tr> 
        {{/each}} 
    </tbody>
</table> 

